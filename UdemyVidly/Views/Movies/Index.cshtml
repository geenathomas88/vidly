@model IEnumerable<UdemyVidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (!Model.Any())
{
    <p>No Movies!</p>
}
else
{
    <table class="table table-bordered table-hover table-dark">
        <tr>
            <th>Name</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(@movie.Name, "Details", "Movies", new { id = movie.Id }, null)               
            </td>
            <td>
                @movie.Genre.Name
            </td>
        </tr>
        }
    </table>
}